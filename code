from appJar import gui 
import random
app = gui ("mainscreen","1000x800")
app.setBg("RoyalBlue")
app.setFont(size=20, family="times", underline=False, slant="roman")
app.addLabel("title","Magic 8-Ball but it's orpheus")
app.setLabelBg("title","cornsilk")
app.addLabel("bgcolour","abc")
app.setLabelBg("bgcolour","cornsilk")
app.setLabelFg("bgcolour","cornsilk")
app.addImage("orpheus eepy","orpheus_sleep.gif")
app.addLabel("cute","orpheus is so cuteðŸ’—ðŸ’—ðŸ’—")
app.addLabel("bgcolour1","abc")
app.setLabelBg("bgcolour1","cornsilk")
app.setLabelFg("bgcolour1","cornsilk")
app.addLabel("orpheusss","click this button here to get the mighty orpheus's answers,\n or don't and you can look at eepy orpheus!!!!ðŸŽ‰ðŸŽŠðŸŽ‰")
def start8ball(button):
    app.showSubWindow("8ball")
app.addButton("go_to_8ball",start8ball)
app.setButtonImage("go_to_8ball","arrow.jpg")
app.startSubWindow("8ball","Magic 8-Ball but it is orpheus")
app.setBg("RoyalBlue")
app.setSize("1000x800")
app.addLabel("title1","Magic 8-Ball but it's a orpheus")
app.setLabelBg("title1","cornsilk")
app.addLabel("bgcolour2","abcaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa")
app.setLabelBg("bgcolour2","cornsilk")
app.setLabelFg("bgcolour2","cornsilk")
app.addImage("orpheus w boba","orpheus_boba.jpg")
eight_ball_messages = ["yes", "no", "perhaps", "Blahaj thinks so", "Orpheus?", "definitely", "of course not", "perchance...", "mhmm..", "ðŸ’—ðŸ’—ðŸ’—ðŸ’—ðŸ’—", "hopefully", "yum yum"]
def options():
    message = random.choice(eight_ball_messages)
    app.setLabel("randomLabel",message)
app.addLabel("randomLabel","orpheus is so cuteðŸ’—ðŸ’—ðŸ’—")
app.addButton("Show orpheus's answer", options)
app.addLabelEntry("enter question")
app.addLabel("bgcolour3","abcaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa")
app.setLabelBg("bgcolour3","cornsilk")
app.setLabelFg("bgcolour3","cornsilk")
